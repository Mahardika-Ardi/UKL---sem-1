generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(Customer)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Coffe {
  id           Int            @id @default(autoincrement())
  name         String
  size         String
  price        Float
  image        String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  orderDetails Order_Detail[]
}

model Order_Detail {
  id        Int        @id @default(autoincrement())
  order_id  Int
  coffe_id  Int
  quantity  Int
  price     Float
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  orderList Order_List @relation(fields: [order_id], references: [id])
  coffe     Coffe      @relation(fields: [coffe_id], references: [id])
}

model Order_List {
  id            Int            @id @default(autoincrement())
  customer_name String
  order_type    String
  order_date    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  orderDetails  Order_Detail[]
}

enum Role {
  Customer
  Admin
  Kasir
}
